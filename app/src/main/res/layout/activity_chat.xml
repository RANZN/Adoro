<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linearlayout"
    android:background="@drawable/imgpsh_fullsize_anim"
    tools:context=".chat.ChatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:src="@drawable/ic_back_arrow"
            app:tint="@color/white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/opensans_regular"
                android:text=""
                />
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/green"
                android:textSize="10sp"
                android:fontFamily="@font/opensans_regular"
                android:text="offline"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/tvReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Report"
            android:paddingHorizontal="20dp"
            android:layout_gravity="center"
            android:paddingVertical="5dp"
            android:fontFamily="@font/opensans_semibold"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/black_round"/>

        <TextView
            android:id="@+id/tvBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Block"
            android:layout_marginLeft="10dp"
            android:paddingHorizontal="20dp"
            android:layout_gravity="center"
            android:paddingVertical="5dp"
            android:fontFamily="@font/opensans_semibold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/black_round"/>

        <ImageView
            android:id="@+id/iv_menu"
            android:padding="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/option_menu"
            app:tint="@color/white" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:layout_weight="1">

    </androidx.recyclerview.widget.RecyclerView>
    <ScrollView

        android:layout_width="match_parent"
        android:layout_weight="20"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <LinearLayout
            android:id="@+id/linearChatDesign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/tvSeen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_margin="2dp"
        android:layout_gravity="end"
        android:text="seen"/>

    <LinearLayout
        android:id="@+id/layoutBlock"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:background="@drawable/btn_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:visibility="visible"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Sorry, you cannot reply to this conversation."/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMessage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_bg">
        <ImageView
            android:id="@+id/ivEmoji"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:src="@drawable/ic_smiling_emoticon_square_face"/>

        <EditText
            android:id="@+id/bottompanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
           android:imeOptions="actionSend"
            android:hint="Type a message..."
            android:fontFamily="@font/opensans_regular"
            android:textColorHint="@color/text_gray"
            android:textColorHighlight="@color/white"
            android:inputType="textCapSentences"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@null"/>

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:visibility="gone"
            android:backgroundTint="@android:color/transparent"
            android:textColorHint="#959595"
            android:fontFamily="@font/opensans_regular"
            android:hint="Type a message..."
            />

        <ImageView
            android:id="@+id/ivSend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:src="@drawable/send_message"/>

    </LinearLayout>
</LinearLayout>