<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragments.ProfileFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include layout="@layout/custom_toolbar"/>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <RelativeLayout
           android:id="@+id/rlImage"
           android:layout_width="match_parent"
           android:layout_height="165dp"
           android:layout_marginHorizontal="20dp"
           android:layout_marginTop="20dp">

           <ImageView
               android:id="@+id/iv_cover_pic_profile"
               android:layout_width="match_parent"
               android:layout_height="138dp"
               android:layout_gravity="center_horizontal"
               android:background="@drawable/bg_cover"
               android:src="@drawable/app_logo" />

           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/iv_profile_pic_profile"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:layout_alignParentBottom="true"
               android:layout_gravity="center_horizontal"
               android:scaleType="centerCrop"
               android:src="@drawable/ic_account_24" />

           <ImageView
               android:id="@+id/iv_camera"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_alignParentRight="true"
               android:layout_alignParentBottom="true"
               android:layout_marginBottom="10dp"
               android:clickable="true"
               android:focusable="true"
               android:src="@drawable/caera_icon2" />
       </RelativeLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="20dp"
           android:layout_marginTop="10dp"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/tv_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_toRightOf="@+id/iv_back_icon_profile"
               android:text="Kapil Sharma"
               android:textColor="@color/black"
               android:textSize="18sp" />
           <Space
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"/>

           <TextView
               android:id="@+id/tv_total_posts"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginLeft="16dp"
               android:layout_toRightOf="@+id/iv_back_icon_profile"
               android:text="140k Post"
               android:textColor="@color/black"
               android:textSize="14sp" />
           <TextView
               android:id="@+id/tv_total_fans"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginLeft="16dp"
               android:layout_toRightOf="@+id/iv_back_icon_profile"
               android:text="100 Fans"
               android:textColor="@color/black"
               android:textSize="14sp" />
           <TextView
               android:id="@+id/tv_total_applied"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginLeft="16dp"
               android:layout_toRightOf="@+id/iv_back_icon_profile"
               android:text="200 A"
               android:textColor="@color/black"
               android:textSize="14sp" />
       </LinearLayout>
       <TextView
           android:id="@+id/tv_profile_type"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
android:layout_marginHorizontal="20dp"
           android:layout_marginTop="10dp"
           android:layout_toRightOf="@+id/iv_back_icon_profile"
           android:text="Memer"
           android:textColor="@color/black"
           android:textSize="16sp" />
       <TextView
           android:id="@+id/tv_bio"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_marginHorizontal="20dp"
           android:layout_marginTop="10dp"
           android:layout_toRightOf="@+id/iv_back_icon_profile"
           android:text="jhfisdfhioasudfgusgfusfgushdfbkjsdfbsjkfhsjkdfbjskdjhsjdjskhbjskdbnskjdfbsjkhbbj"
           android:textColor="@color/black"
           android:textSize="16sp" />

       <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
           android:layout_width="match_parent"
           android:layout_height="12dp"
           app:rcBackgroundColor="#000000"
           app:rcBackgroundPadding="2dp"
           app:rcMax="100"
           android:layout_marginTop="20dp"
           android:layout_marginHorizontal="20dp"
           app:rcProgress="40"
           app:rcProgressColor="@color/colorAccent"
           app:rcRadius="10dp"
           app:rcSecondaryProgress="60"
           android:id="@+id/progress_profile_complete" />

       <TextView
           android:id="@+id/tv_completed_total"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_marginHorizontal="20dp"
           android:layout_marginTop="10dp"
           android:textAllCaps="true"
           android:layout_toRightOf="@+id/iv_back_icon_profile"
           android:text="30% completed"
           android:textColor="@color/text_gray"
           android:textSize="16sp" />

       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/rv_gallery"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           tools:listitem="@layout/item_gallery"
           android:layout_marginHorizontal="20dp"
           android:nestedScrollingEnabled="false"
           android:layout_marginTop="20dp"
           app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
           app:spanCount="3"/>
   </LinearLayout>
</androidx.core.widget.NestedScrollView>






    </androidx.appcompat.widget.LinearLayoutCompat>

    <ProgressBar
        android:id="@+id/pb_prof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>