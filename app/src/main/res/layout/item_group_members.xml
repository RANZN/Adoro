<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingHorizontal="15dp"
    android:gravity="center_vertical"
    android:background="@drawable/bg_edittext"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    android:orientation="horizontal">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_group_member"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_account_24" />

    <TextView
        android:id="@+id/tv_username_group_member"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="15dp"
        android:layout_toStartOf="@id/btn_follow_back"
        android:layout_toEndOf="@id/iv_user_notification"
        android:gravity="center_vertical"
        android:text="kapilkaushik_"
        android:textColor="@color/black"
        android:textSize="14sp" />




</LinearLayout>