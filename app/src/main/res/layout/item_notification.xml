<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:paddingHorizontal="15dp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_notification"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_account_24" />

    <TextView
        android:id="@+id/tv_username_notification"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="15dp"
        android:layout_toStartOf="@id/btn_follow_back"
        android:layout_toEndOf="@id/iv_user_notification"
        android:gravity="center_vertical"
        android:text="kapilkaushik_ followed you"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <Button
        android:id="@+id/btn_follow_back"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_button"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:text="@string/follow"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="10sp" />

</RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_gray"/>

</LinearLayout>