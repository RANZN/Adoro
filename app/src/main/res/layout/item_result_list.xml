<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="142dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    app:contentPadding="15dp"
    android:elevation="1dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_group_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_account_24" />


    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@id/ll_view_result"
        android:layout_toEndOf="@id/iv_group_pic"
        android:text="Group Name"
        android:textColor="@color/text_black"
        android:textFontWeight="500"
        android:textSize="16sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/ll_view_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_requirement_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Static Meme"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            android:visibility="gone"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_see_result"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_buttun_gradient"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="@string/see_result"
            android:visibility="gone"
            android:textColor="@color/buttonTextColor"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_submit_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="40 Submit 5 Win"
            android:visibility="gone"
            android:textColor="@color/text_black"
            android:textSize="10sp" />
    </LinearLayout>


</RelativeLayout>

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:text=""
            android:layout_weight="1"
            android:textColor="@color/text_gray"
            android:textSize="14sp"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>