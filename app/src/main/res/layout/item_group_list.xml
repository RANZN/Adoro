<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_160sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    app:contentPadding="20dp"
    android:elevation="1dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_group_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_account_24" />


            <LinearLayout
                android:id="@+id/ll_groupname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_group_pic"
                android:layout_toStartOf="@id/ll_join_group"
                android:orientation="vertical"
                android:layout_marginHorizontal="5dp">
                <TextView
                    android:id="@+id/tv_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group Name"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_total_memberes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 members"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_join_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:gravity="end">
                <ImageView
                    android:id="@+id/iv_menu_group"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:src="@drawable/option_menu" />
                <TextView
                    android:id="@+id/tv_group_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Public"
                    android:visibility="gone"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btn_enter"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:background="@drawable/bg_buttun_gradient"
                    android:text="@string/enter"
                    android:visibility="gone"
                    android:textColor="@color/buttonTextColor"
                    android:textSize="10sp" />


            </LinearLayout>




        </RelativeLayout>

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:text=""
            android:textColor="@color/text_gray"
            android:textSize="14sp"/>
    </LinearLayout>




</androidx.cardview.widget.CardView>