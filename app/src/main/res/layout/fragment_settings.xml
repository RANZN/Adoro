<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/custom_toolbar" />


        <Switch
            android:id="@+id/switch_notification_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="15dp"
            android:paddingStart="15dp"
            android:text="Notifications (On)"
            android:textOff="Off"
            android:textOn="On"
            android:textSize="18sp"
            android:visibility="gone"
            tools:ignore="UseSwitchCompatOrMaterialXml" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_notification_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Notifications"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_circular"
                android:gravity="center_vertical">

                <Switch
                    android:id="@+id/switch_notification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:textOff="OFF"
                    android:textOn="ON"
                    android:thumb="@drawable/iv_switch_thumb"
                    android:track="@drawable/custom_track"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/rl_logout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edit_text_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:text="@string/logout"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_logout_icon"
                    android:layout_width="18dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/iv_logout1" />
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pb_campaigns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

</RelativeLayout>
